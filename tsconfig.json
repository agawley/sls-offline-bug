{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es2015",
        "module": "esnext",
        "outDir": ".build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "rootDir": "./",
        "jsx": "preserve"
    }
}
